.div.mt-3
  .row
    .col-sm-1
    .col-sm-10
      = simple_form_for @form, url: update_password_account_path, method: :patch, html: { class: 'customized', data: { turbo: "false" } } do |f|
        .card
          %fieldset
            %legend.card-header.bigger
              = t('.title')
            .card-body
              .row
                .col-sm-5
                  = f.input :password
                  = f.input :password_confirmation

              .row.mt-sm
                .col-sm-12.text-center
                  = f.button :submit, t('views.shared.save'), class: 'btn-sm btn-info text-center'
                  = link_to t('views.shared.cancel'), account_path, class: 'link'

    .col-sm-2
