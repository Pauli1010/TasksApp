<%= form_with url: registrations_path, method: :post, scope: :user do |f| %>
  <div class="field">
    <%= f.label :email, t('email', scope: 'activemodel.attributes.user') %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, t('password', scope: 'activemodel.attributes.user') %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, t('password_confirmation', scope: 'activemodel.attributes.user') %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit t(".register") %>
  </div>
<% end %>