<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :email, t('email', scope: 'activemodel.attributes.user') %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, t('password', scope: 'activemodel.attributes.user') %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t(".login") %>
  </div>
<% end %>